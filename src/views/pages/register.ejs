<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <!-- tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="flex flex-wrap relative min-h-screen overflow-y-auto justify-center items-center">
        <img class="min-h-screen fixed lg:static w-full object-cover lg:w-2/5"
            src="https://c.wallhere.com/photos/c1/9e/2560x1440_px_digital_art_minimalism_stripes-563734.jpg!d" alt="background-img">
        <div class="rounded-lg py-8 mt-8 bg-white absolute w-5/6 md:w-3/5 flex flex-col content-center flex-wrap justify-center lg:relative">
            <div class="text-center">
                <h2 class="text-4xl font-bold text-gray-900">
                    Sign In
                </h2>
                <p class="mt-2 text-base text-gray-500">Complete Form to create your account</p>
            </div>
            <div class="flex items-center justify-center mt-8">
                <span class="h-px w-3/5 bg-gray-200"></span>
            </div>
            <form id="form" class="mt-8 space-y-4 w-5/6 lg:space-y-6 lg:w-3/5">
                <div class="flex flex-nowrap justify-between">
                    <div class="w-1/2 pr-3">
                        <label class="ml-3 text-sm font-bold text-gray-700 tracking-wide">
                            Name
                        </label>
                        <input
                            class="w-full content-center text-base px-4 py-2 border-b rounded-2xl border-gray-300 focus:outline-none focus:border-indigo-500"
                            name="name"
                            oninput="commonValidation(this)"
                            type="" 
                            placeholder="Name">
                    </div>
                    <div class="w-1/2 pl-3">
                        <label class="ml-3 text-sm font-bold text-gray-700 tracking-wide">
                            LastName
                        </label>
                        <input
                            class="w-full content-center text-base px-4 py-2 border-b rounded-2xl border-gray-300 focus:outline-none focus:border-indigo-500"
                            name="lastName"
                            oninput="commonValidation(this)"
                            type="" 
                            placeholder="LastName">
                    </div>
                </div>
                <div class="flex flex-nowrap justify-between">
                    <div class="w-5/6">
                        <label class="ml-3 text-sm font-bold text-gray-700 tracking-wide">
                            Username
                        </label>
                        <input
                            class="w-full content-center text-base px-4 py-2 border-b rounded-2xl border-gray-300 focus:outline-none focus:border-indigo-500"
                            name="username"
                            oninput="commonValidation(this)"
                            type=""
                            placeholder="Username">
                    </div>
                    <div class="w-32 pl-6">
                        <label class="ml-3 text-sm font-bold text-gray-700 tracking-wide">
                            Age
                        </label>
                        <input
                            class="w-full content-center text-base px-4 py-2 border-b rounded-2xl border-gray-300 focus:outline-none focus:border-indigo-500"
                            name="age"
                            oninput="commonValidation(this)"
                            type="number" 
                            placeholder="0">
                    </div>
                </div>
                <div>
                    <label class="ml-3 text-sm font-bold text-gray-700 tracking-wide">Email</label>
                    <input
                        class=" w-full text-base px-4 py-2 border-b border-gray-300 focus:outline-none rounded-2xl focus:border-indigo-500"
                        name="email"
                        oninput="validateEmail(this)"
                        id="emailInput"
                        type="" 
                        placeholder="mail@gmail.com">
                </div>
                <div>
                    <label class="ml-3 text-sm font-bold text-gray-700 tracking-wide">
                        Password
                    </label>
                    <input
                        class="w-full content-center text-base px-4 py-2 border-b rounded-2xl border-gray-300 focus:outline-none focus:border-indigo-500"
                        name="password"
                        oninput="validatePassword(this)"
                        id="passwordInput"
                        type="" 
                        placeholder="Enter your password">
                </div>
                <div id="buttonContainer">
                    <button
                        type="button"
                        onclick="authApiCall(`http://localhost:8080/api/v1/auth/register`)"
                        id="submitButon"
                        class="w-full flex justify-center bg-gradient-to-r from-indigo-500 to-blue-600  hover:bg-gradient-to-l hover:from-blue-500 hover:to-indigo-600 text-gray-100 p-4  rounded-full tracking-wide font-semibold  shadow-lg cursor-pointer transition ease-in duration-500">
                        Sign in
                    </button>
                </div>
                <p class="flex flex-col items-center justify-center mt-10 text-center text-md text-gray-500">
                    <span>You have an account?</span>
                    <a href="/login"
                        class="text-indigo-400 hover:text-blue-500 no-underline hover:underline cursor-pointer transition ease-in duration-300">Login</a>
                </p>
            </form>
        </div>
    </div>

    <!-- JS auth.js -->
    <script src="/static/auth.js"></script>

    <!-- JS form register -->
    <script>
        const commonValidation = (e) => {
            const inputValue = e?.value
            const input = e

            if (inputValue.length > 0) {
                input.classList.add('focus:border-green-500')
            }
            else {
                input.classList.remove('focus:border-green-500')
                input.classList.add('focus:border-indigo-500')
            }
        }
    </script>
</body>

</html>